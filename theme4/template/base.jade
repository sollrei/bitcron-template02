html
    +h.i18n('Home', '首页', 'zh_cn')
    +h.i18n('Categories', '分类', 'zh_cn')
    +h.i18n('Archive', '归档', 'zh_cn')
    +h.i18n('Tags', '标签', 'zh_cn')
    +h.i18n('About', '关于', 'zh_cn')
    +h.i18n('Links', '友链', 'zh_cn')
	link(href='https://fonts.googleapis.com/css?family=Josefin+Sans|Karla',rel='stylesheet')
    head
        +h.headers
        block title
            title= post.title or site.title
        +h.load('markdown')
        +h.load('/template/reset.scss')
        +h.load('/template/style.scss')
        +h.load('/template/post.scss')
    body
        .m-header(style="background-image: url({{site.background_image}})")
            .header
                h1.site-title
                    a(href="/?status=loaded") {{ site.title }}
                    svg(viewBox="0 0 185 94",xmlns="http://www.w3.org/2000/svg",fill-rule="evenodd",clip-rule="evenodd",stroke-linejoin="round",stroke-miterlimit="1.414",width="80")
