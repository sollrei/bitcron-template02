                        path(d="M142.938 36.47s16.832 1.635 24.819-11.52c7.988-13.154 12.358-17 13.64-17.993 1.283-.993-29.841 1.646-38.459 29.513z",fill="#a9c2c8")
                nav.nav
                    for category in  posts.categories
                        a(href=category.url)= category.title
                        span /
            p.img Photo by Jazmin Quaynor on Unsplash
        .m-main      
            .content
                block content
                footer.footer
                    .m-sidebar
                        +pure
                            +pure(1, 0.4, 0.4, 0.4)
                                .avatar
                                    img(src="{{site.avatar}}",height="60",width="60")
                                .name
                                    span @
                                    span= site.configs.author or site.configs.admin_name
                                .desc= site.configs.sub_title
                                .footer-nav= site.just_nav
                            +pure(1, 0.6, 0.6, 0.6)
                                form.search-form(action='')
                                    input.input(type='search', name='s')
                                    button(type='submit')
                                        i.fa.fa-search
                                .side-tags
                                    for tag_name, tag_count in site.tags
                                        a.tag-item(role="tags",href="/tags/{{ tag_name }}")= tag_name
                    +pure
                        +pure(1, 0.5, 0.5, 0.5)
                            p Designed by Sollrei
                            p
                                a(href="https://bitcron.com/?s=f", target="_blank") Proudly published with Bitcron！
                        +pure(1, 0.5, 0.5, 0.5)
                            .ft-right
                                +site.socials
        +h.load('font')