                        path(d="M39.392 46.534s16.23 5.418 18.197 20.864c1.968 15.447 4.424 20.801 5.2 22.247.776 1.445-26.904-13.807-23.397-43.111z",fill="#2d475a")
                        path(d="M113.701 48.408s15.576-5.893 26.56 4.55c10.984 10.443 16.129 12.972 17.604 13.585 1.475.613-28.788 6.13-44.164-18.135z",fill="#7ea6b8")
